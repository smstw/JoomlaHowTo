<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic">
		<field name="id"
			type="hidden"
			label="id"
			description="Sakura id"
			default="0"
			readonly="true"
			class="readonly" />
		<field name="title"
			type="text"
			label="Title"
			description="Sakura title"
			required="true" />
		<field name="description"
			type="editor"
			label="Description"
			description="Sakura description"
			required="true"
			filter="JComponentHelper::filterText" />
		<field name="location"
			type="list"
			label="Location"
			description="Sakura location">
			<option value="">-- Select Location --</option>
			<option value="Tokyo">Tokyo</option>
			<option value="Osaka">Osaka</option>
			<option value="Kyoto">Kyoto</option>
		</field>
		<field name="blossom"
			type="radio"
			class="btn-group btn-group-yesno"
			label="Blossom"
			description="If sakura blossom or not"
			default="0">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</field>
		<field name="event"
			type="list"
			label="Event"
			description="Sakura events">
			<option value="">-- Select Event --</option>
			<option value="Karaoke">Karaoke</option>
			<option value="Hanabi">Hanabi</option>
			<option value="Matsuri">Matsuri</option>
			<option value="Nomikai">Nomikai</option>
		</field>
	</fieldset>
	<fieldset name="datetime">
		<field name="created"
			type="calendar"
			label="Created at"
			description="Item created datetime"
			class="inputbox"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" />
		<field name="created_by"
			type="user"
			label="Created by"
			description="The user id who created the item" />
		<field name="modified"
			type="calendar"
			class="readonly"
			label="Modified at"
			description="Item modified datetime"
			size="22"
			readonly="true"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" />
		<field name="modified_by"
			type="user"
			label="Modified by"
			description="The user id who modified the item"
			class="readonly"
			readonly="true"
			filter="unset" />
	</fieldset>
</form>
